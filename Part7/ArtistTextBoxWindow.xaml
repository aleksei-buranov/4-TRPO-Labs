<Window x:Class="Part78.ArtistTextBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner"
        Title="Ввод артиста" Height="130" Width="400">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock HorizontalAlignment="Center" Text="Введите искомого артиста:" />
            <TextBox Name="ArtistTextBox" HorizontalAlignment="Stretch" Height="20" />
            <UniformGrid Margin="10" HorizontalAlignment="Center" Columns="2">
                <Button Name="OkButton" Margin="5" Width="70" Content="Ок" IsDefault="True" Click="OkButton_Click" />
                <Button Name="CancelButton" Margin="5" Content="Отмена" IsCancel="True" Click="CancelButton_Click" />
            </UniformGrid>
        </StackPanel>
        
    </Grid>
</Window>
