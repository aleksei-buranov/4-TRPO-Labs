<Window x:Class="Part1.WordTrickWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Фокус" Height="200" Width="350">
    <Grid>
        <StackPanel Height="20" Orientation="Horizontal">
            <TextBox Name="FirstValue" MinWidth="150" Margin="5 0" />
            <Button Name="TrickButton" MinWidth="30" Click="TrickButton_Click" />
            <TextBox Name="SecondValue" MinWidth="150" Margin="5 0" />
        </StackPanel>
    </Grid>
</Window>
